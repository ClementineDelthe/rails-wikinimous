<h2><%= @article.title %></h2>
<h3><%= @article.content %></h3>

<p class="btn btn-outline-info"><%= link_to '<i class="fa-solid fa-rotate-left"></i>'.html_safe, articles_path %></p>
<p class="btn btn-outline-info"><%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<p class="btn btn-outline-info"><%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_article_path %></p>
